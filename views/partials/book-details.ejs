<div class = "container my-4 bg-dark text-light">
    <div class = "row">
        <div class = "col-md-4 my-3">
            <img src=<%= book[0].thumbnailurl %> class = "w-100 mb-md-0 mb-3 img-thumbnail" alt="Image Not Found">
        </div>
        <div class = "col-md-8 my-3">
            <h2 style="text-align:center;" class="text-warning"><%= book[0].title %></h2>
            <h3 style="text-align:center;" class="text-warning"><%= book[0].isbn %></h3>
            <p> 
                <p>
                    <span class="text-warning"><b>Page Count:</b></span> <%= book[0].pagecount %>
                </p>
                <p>
                    <% if(book[0].publisheddate){ %>
                    <span class="text-warning"><b>Published Date:</b></span> <%= book[0].publisheddate %>
                    <% } %>
                </p>
                <p style="text-align:justify;">
                    <% if(book[0].shortdescription){ %>
                    <span class="text-warning"><b>Short Description:</b></span> <%= book[0].shortdescription %>
                    <% } %>
                </p>
                <p style="text-align:justify;">
                    <% if(book[0].longdescription){ %>
                    <span class="text-warning"><b>Long Description:</b></span> <%= book[0].longdescription %>
                    <% } %>
                </p>
                <p>
                    <span class="text-warning"><b>Status:</b></span> <%= book[0].status %>
                </p>
                <p>
                    <span class="text-warning"><b>Authors:</b></span>
                    <% for(author of authors){ %>
                    <p>
                        <a href="/authors/<%= author %>" style="color:white;"><%= author %></a>
                    </p>
                    <% } %>
                </p>
                <p>
                    <span class="text-warning"><b>Categories:</b></span>
                    <% for(category of categories){ %>
                    <p>
                        <a href="/categories/<%= category %>" style="color:white;"><%= category %></a>
                    </p>
                    <% } %>
                </p>
            </p>
        </div>
    </div>
</div>
