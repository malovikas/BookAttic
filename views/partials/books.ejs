<header class = "header bg-warning">
    <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img width="80px" height="120px"src="<%- imgSource %>" alt = ".."> 
        </a>
        <a class="navbar-brand me-auto" href="/">
          <b><%= title %></b>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item ms-auto">
              <a class="nav-link <%= (pageSlug == 'home' ? 'active' : '') %>" aria-current="page" href="/"><b>Home</b></a>
            </li>
            <li class="nav-item ms-auto">
              <a class="nav-link <%= (pageSlug == 'books' ? 'active' : '') %>" href="/books"><b>Books</b></a>
            </li>
            <li class="nav-item ms-auto">
              <a class="nav-link <%= (pageSlug == 'categories' ? 'active' : '') %>" href="/categories"><b>Categories</b></a>
            </li>
            <li class="nav-item ms-auto">
              <a class="nav-link <%= (pageSlug == 'authors' ? 'active' : '') %>" href="/authors"><b>Authors</b></a>
            </li>
            <li class="nav-item ms-auto">
              <a class="nav-link <%= (pageSlug == 'about' ? 'active' : '') %>" href="/about"><b>About Us</b></a>
            </li>
            <li class="nav-item ms-auto">
              <a class="nav-link" href="/login"><b>Log Out</b></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
</header>

<nav class="navbar navbar-light bg-dark">
    <div class="container">
        <form class="d-flex ms-auto mb-lg-0" action="/books" method = "POST">
            <input class="form-control me-2" type="search" placeholder="Search by Book Name" aria-label="Search" name="value">
            <button class="btn btn-outline-warning" type="submit">Search</button>
        </form>
    </div>
</nav>

<div class = "container my-4 bg-dark">
    <div class = "row">
        <div class = "col-md-8 my-3">
            <h4><span class="text-warning"><%= booksHeading %></span></h4>
            <% let i = 0; %>
            <% for(let book of booksList){ %>
            <div class="row">
                <a href="/books/<%= book.isbn %>" style="color:white"><%= ++i %>. <%= book.title %></a>
            </div>
            <% } %>
        </div>
    </div>
</div>